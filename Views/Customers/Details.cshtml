@model Zently.Models.Customer
@{
    ViewBag.Title = "Model.name";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

 @if (Model.Birthday==null)
 {
     <ul>
         <li>@Model.MembershipType.Name</li>
        
     </ul>
 }

 else
 {
     <ul>
         <li>@Model.MembershipType.Name</li>
         <li>@Model.Birthday</li>
     </ul>
 }




